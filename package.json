{
  "name": "react-starter",
  "private": true,
  "version": "1.1.0",
  "description": "",
  "engines": {
    "node": ">=4.7"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run prebuild && concurrently \"npm run watch:css\" \"npm run watch:html\" \"npm run dev-server\"",
    "dev-server": "webpack-dev-server",
    "clean": "rimraf ./dist && mkdir dist && mkdir dist/css",
    "watch:css": "npm run copy:css -- --watch --verbose",
    "copy:css": "cpx ./src/css/* ./dist/css/",
    "watch:html": "npm run copy:html -- --watch --verbose",
    "copy:html": "cpx ./src/**/*.html ./dist/",
    "webpack:build": "cross-env NODE_ENV=production webpack",
    "prebuild": "npm run clean && npm run copy:html && npm run copy:css",
    "build": "npm run webpack:build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "concurrently": "~3.1.0",
    "cpx": "~1.5.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^6.9.0",
    "postcss-loader": "^1.2.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "rimraf": "~2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0"
  },
  "dependencies": {}
}
